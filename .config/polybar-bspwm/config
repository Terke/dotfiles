[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;www
ws-icon-1 = 2;fm
ws-icon-2 = 3;doc
ws-icon-3 = 4;mus
ws-icon-4 = 5;vid
ws-icon-5 = 6;img
ws-icon-6 = 7;mail
ws-icon-7 = 8;dev
ws-icon-8 = 9;sys
ws-icon-9 = 10;misc

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = #8FBCBB
label-focused-underline= #8FBCBB
label-focused-padding = 2
label-focused-foreground = ${colors.background}

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-foreground = ${colors.background}
