# BSPWM HOTKEYS

# Default Browser
super + F1
	brave

# dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'Ubuntu Mono Nerd Font:bold:pixelsize=16'

# Rofi
super + F12
    rofi -show run

# Terminal
super + Return
    termite

# File Manager
super + shift + Return
	thunar

# reload sxhkd
super + shift + s
	pkill -USR1 -x sxhkd

# Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

# Close applications  
super + shift + q
	bspc node -c

# Close applications (Second option)
super + q
	bspc node -c

# Xkill
super + Escape
    xkill

# Logout
super + shift + x
	bspc quit

# STATE/FLAGS
# set the window state
super + {t,shift + t,p,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the window state (Second option)
super + space
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#################################################################
# SCRIPTS
#################################################################

# Edit common config files
alt + ctrl + c
   /home/terke/.scripts/dmenu-configs.sh
# Common system montoring programs
alt + ctrl + m
   /home/terke/.scripts/dmenu-sysmon.sh
# dmenu-screenshot
alt + ctrl + s
   /home/terke/.scripts/dmenu-scrot.sh 
# rofi-screenshot
alt + ctrl + z
   /home/terke/.scripts/rofi-screenshot

# FOCUS/SWAP

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus next/previous window
ctrl + alt + Left
	bspc node --focus west

# Focus next/previous window
ctrl + alt + Right
	bspc node --focus east

# Focus Up window
ctrl +alt + Up
	bspc node --focus north

# Focus Down window
ctrl + alt + Down
	bspc node --focus south