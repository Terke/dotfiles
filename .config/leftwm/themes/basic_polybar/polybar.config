################################################################################

################################################################################

[module/arrow1]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #74438f
content-background = ${colors.background}

[module/arrow2]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #4f76c7
content-background = #74438f

[module/arrow3]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #74438f
content-background = #4f76c7

[module/arrow4]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #4f76c7
content-background = #74438f

[module/arrow5]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #74438f
content-background = #4f76c7

[module/arrow6]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #4f76c7
content-background = #74438f

[module/arrow7]
type = custom/text
content = "%{T2} %{T-}"
content-font = 2
content-foreground = #74438f
content-background = #4f76c7

################################################################################

[module/cpu]
type = internal/cpu
interval = 1
format-foreground = #ffffff
format-background = #74438f
format-prefix = "    "
format-prefix-foreground = #ffffff
label = Cpu:%percentage:3%%

################################################################################

[module/mem]
type = internal/memory
interval = 1
label = Mem: %percentage_used%%
format = <label>
format-prefix = "    "
format-prefix-foreground = #ffffff
format-foreground = #ffffff
format-background = #4f76c7

################################################################################

[module/netdown]
type = internal/network
interface = enp0s3
label-connected = "%downspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "    "
format-connected-prefix-foreground = #ffffff
format-connected-foreground = #ffffff
format-connected-background = #74438f

################################################################################

[module/netup]
type = internal/network
interface = enp0s3
label-connected = "%upspeed:7%"
format-connected = <label-connected>
format-connected-prefix = "    "
format-connected-prefix-foreground = #ffffff
format-connected-foreground = #ffffff
format-connected-background = #74438f

################################################################################

[module/up]
type = custom/script
exec = ~/.config/polybar/scripts/check-arch-updates
interval = 1000
label = Updates: %output%
format-foreground = #ffffff
format-background = #4f76c7
format-prefix = "    "
format-prefix-foreground = #ffffff
click-left = pamac-manager &

################################################################################

[module/vol]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume --togmute
scroll-up = ~/.config/polybar/scripts/pavolume --up
scroll-down = ~/.config/polybar/scripts/pavolume --down
format-foreground = #ffffff
format-background = #74438f

################################################################################

[module/date]
type = internal/date
interval = 5
date-alt = " %d %b (%a), %Y"
date = " %a %b %d, %Y"
time = %l:%M%p
time-alt = %l:%M%p
format-prefix = "    "
format-prefix-foreground = #ffffff
format-foreground = #ffffff
format-background = #4f76c7
label = "%date%   %time% "

################################################################################

[module/powermenu]
type = custom/text
content = 
content-font = 1
content-padding = 2
content-foreground = #ffffff
content-background = #74438f
click-left = arcolinux-logout &

################################################################################
