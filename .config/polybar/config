[bar/mainbar-bspwm]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
bottom = false
separator =
# tray-position = right
tray-background = ${colors.background}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #e06c75

wm-restack = bspwm
override-redirect = true

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

border-size = 0
;border-left-size = 0
;border-right-size = 25
;border-top-size = 0
;border-bottom-size = 25
border-color = #5c6370

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 2

;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "xos4 Terminus:size=9;2"
font-1 = "xos4 Terminus:size=9;2"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=9;2"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=9;2"
font-4 = "Weather Icons:size=9;2"
font-5 = "FontAwesome:size=11;2"

modules-left = bspwm xwindow
modules-center =
modules-right = weather1 cpu memory filesystem eth arch-updates date time volume

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

