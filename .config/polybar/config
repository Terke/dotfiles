[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.magenta}
label-focused-padding = 2
label-focused-foreground = ${colors.magenta}

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.blue}

label-urgent = %icon%
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.grey}
label-empty-padding = 2
label-empty-background = ${colors.background}
label-monocle = " [monocle] "
label-monocle-foreground = ${colors.green}
label-tiled = " [tiled] "
label-tiled-foreground = ${colors.green}
label-fullscreen = " [fullscreen]  "
label-fullscreen-foreground = ${colors.green}
label-floating = " [floating] "
label-floating-foreground = ${colors.green}
label-pseudotiled = " [pseudotiled] "
label-pseudotiled-foreground = ${colors.green}
label-locked = " [locked] "
label-locked-foreground = ${colors.green}
label-sticky = " [sticky] "
label-sticky-foreground = ${colors.green}
label-private =  " [private] "
label-private-foreground = ${colors.green}

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-font = 6

